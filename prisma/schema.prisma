generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Users {
  id       Int        @id @default(autoincrement())
  username String     @unique
  password String
  reviews  Reviews[]
  comments Comments[]
}

model Items {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  avgRating   Int       @default(0)
  reviews Reviews[]
}

model Comments {
  id      Int     @id @default(autoincrement())
  comment String
  userId  Int
  user    Users   @relation(fields: [userId], references: [id], onDelete: Cascade)
  reviewId Int
  review Reviews? @relation(fields: [reviewId], references: [id], onDelete: Cascade)
}

model Reviews {
  id     Int    @id @default(autoincrement())
  review String
  rating Int
  userId Int
  user   Users   @relation(fields: [userId], references: [id], onDelete: Cascade)
  itemId Int
  item Items @relation(fields: [itemId], references: [id], onDelete: Cascade)
  comments Comments[]
}
